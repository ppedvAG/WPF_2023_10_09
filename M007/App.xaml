<Application x:Class="M007.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:M007"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
		<!--Durch ein ResourceDictionary können globale Resourcen erstellt werden-->
		<ResourceDictionary>
			<Style TargetType="Button" x:Name="ButtonStyle">
				<Setter Property="Background" Value="Black"/>
				<Setter Property="Foreground" Value="White"/>
				<Setter Property="Margin" Value="5"/>
				<Setter Property="Content">
					<Setter.Value>
						<!--Freie Bearbeitung des Inhalts des Buttons-->
						<StackPanel>
							<TextBlock Text="Oben"/>
							<TextBlock Text="Unten"/>
						</StackPanel>
					</Setter.Value>
				</Setter>
			</Style>
			<SolidColorBrush x:Key="GlobalColor" Color="Fuchsia"/>
		</ResourceDictionary>
    </Application.Resources>
</Application>
